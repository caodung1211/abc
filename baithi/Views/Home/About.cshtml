@{
    ViewBag.Title = "Trang chủ";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>hằng xáu tính</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/css/owl.carousel.css">
    <link rel="stylesheet" href="/assets/css/owl.theme.default.css">
    <link rel="stylesheet" href="/assets/css/style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
    <div class="container-fuild top-bar">
        <div class="dashboard">
            <a href="https://localhost:44340/"><i class="fas fa-tachometer-alt"></i>Dashboard</a>
        </div>
    </div>
    <header class="container">
        <a class="navbar-brand logo" href="#">
            <img src="~/Images/logo.png" alt="">
        </a>
    </header>

    <div class="container-fuild banner-top">
        <div class="owl-banner-top owl-carousel owl-theme">
            <div class="item">
                <img src="~/Images/159955771330.jpg" alt="" srcset="">
            </div>
            <div class="item">
                <img src="~/Images/1599557496973.jpg" alt="" srcset="">
            </div>
            <div class="item">
                <img src="~/Images/1599557590691.jpg" alt="" srcset="">
            </div>
        </div>
    </div>

    <section class="experience">
        <div class="container">
            <div class="box-text">
                <h2 class="section-title">20 NĂM KINH NGHIỆM KINH DOANH ĐỒ CÂU</h2>
                <hr class="section-hr">
                <h3 class="section-desc">ĐẢM BẢO CHẤT LƯỢNG - UY TÍN SỐ 1</h3>
            </div>
            <div class="row service">
                <div class="col-md-4 col-12">
                    <div class="box-service">
                        <div class="box-img">
                            <i class="fas fa-phone-alt"></i>
                        </div>
                        <div class="box-text">
                            <p>ĐẶT HÀNG NHANH</p>
                            <p>Gọi ngay <a href="tel:+0934687369">0934.687.369</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-12">
                    <div class="box-service">
                        <div class="box-img">
                            <i class="fas fa-shipping-fast"></i>
                        </div>
                        <div class="box-text">
                            <p>GIAO HÀNG NHANH</p>
                            <p>Giao hàng nội thành trong 2-3h</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-12">
                    <div class="box-service">
                        <div class="box-img">
                            <i class="fas fa-box-open"></i>
                        </div>
                        <div class="box-text">
                            <p>100% ĐƠN HÀNG CHO KIỂM TRA</p>
                            <p>Hoàn trả nếu không đúng yêu câu</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="container-fluid product-saphet">

        <div class="container">
            <div class="title-box-product">
                <h2>Sản phẩm mới</h2>
            </div>
            <div class="row custom-height">

                    @foreach (var item in ViewBag.sp_moi)
                    {
                    <div class="col-md-3">
                        <div class="box-product click-show-@item.IDsp">
                            <div class="box-img">
                                <img class="img-home" src="~/Images/@item.anh" />
                            </div>
                            <p class="name-product">@item.tensp</p>
                            <p class="price-product">Giá tiền: <span class="number-product">@item.giathanh</span></p>
                        </div>
                        <div class="box-popup box-popup-@item.IDsp">
                            <div class="product-popup">
                                <div class="box-img">
                                    <img src="~/Images/@item.anh" />
                                </div>
                                <div class="box-text">
                                    <p class="name-product">@item.tensp</p>
                                    <p class="total-product">Số lượng còn trong kho: <span class="number-product">@item.soluong</span></p>
                                    <p class="price-product">Giá tiền: <span class="number-product">@item.giathanh VNĐ</span></p>
                                    <p class="desc-product">@item.mota</p>
                                    <span class="close-popup">X</span>
                                    <a class="buynow" href="tel:+0865245160">Gọi đặt hàng ngay</a>
                                </div>
                            </div>
                        </div>

                        <div class="bg-popup bg-@item.IDsp">
                        </div>
                        <script>

                                $(".click-show-@item.IDsp").click(function () {
                                    $('.box-popup-@item.IDsp').addClass('show-popup');
                                    $('.bg-popup').css('display','block');

                                });
                                $(".close-popup").click(function () {
                                    $('.box-popup-@item.IDsp').removeClass('show-popup');
                                    $('.bg-popup').css('display', 'none');

                                });

                        </script>
                    </div>
                 
                    }
             
            </div>
        </div>
    </div>

    <div class="container-fluid product-saphet">

        <div class="container">
            <div class="title-box-product">
                <h2>Sản phẩm mới</h2>
            </div>
            <div class="row">
                @foreach (var item in ViewBag.sp_may_cau_ca)
                {
                    <div class="col-sm-3">
                        <div class="box-product click-show-@item.soluong">
                            <img class="img-home" src="~/Images/@item.anh" />
                            <p class="name-product">@item.tensp</p>
                            <p class="price-product">Giá tiền: <span class="number-product">@item.giathanh</span></p>
                        </div>
                        <div class="box-popup box-popup-@item.soluong">
                            <div class="product-popup">
                                <div class="box-img">
                                    <img src="~/Images/@item.anh" />
                                </div>
                                <div class="box-text">
                                    <p class="name-product">@item.tensp</p>
                                    <p class="total-product">Số lượng còn trong kho: <span class="number-product">@item.soluong</span></p>
                                    <p class="price-product">Giá tiền: <span class="number-product">@item.giathanh</span></p>
                                    <span class="close-popup">X</span>
                                    <a class="buynow" href="tel:+0865245160">Gọi đặt hàng ngay</a>
                                </div>
                            </div>
                        </div>

                        <div class="bg-popup bg-@item.soluong">
                        </div>
                        <script>

                                $(".click-show-@item.soluong").click(function () {
                                    $('.box-popup-@item.soluong').addClass('show-popup');
                                    $('.bg-popup').css("display", "block");
                                });
                                $(".close-popup").click(function () {
                                    $('.box-popup-@item.soluong').removeClass('show-popup');
                                    $('.bg-popup').css("display", "none");
                                });

                        </script>

                    </div>
                }
            </div>
        </div>
    </div>

    <section class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-12">
                    <h2 class="title-heading-footer">KHÓA HỌC SẮP KHAI GIẢNG</h2>
                    <ul class="course">
                        <li>LẬP TRÌNH VIÊN QUỐC TẾ</li>
                        <li>LẬP TRÌNH VIÊN QUỐC TẾ</li>
                        <li>LẬP TRÌNH VIÊN QUỐC TẾ</li>
                    </ul>
                    <iframe src="https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2Faptech.vn%2F&amp;tabs=timeline&amp;width=310&amp;height=130&amp;small_header=false&amp;adapt_container_width=true&amp;hide_cover=false&amp;show_facepile=true&amp;appId" width="310" height="130" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowfullscreen="true" allow="autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share"></iframe>
                </div>
                <div class="col-md-4 col-12">
                    <h2 class="title-heading-footer">LIÊN HỆ</h2>
                    <ul class="address">
                        <li>19 Nguyễn Trãi, Ngã Tư Sở, Hà Nội</li>
                        <li>Tel: (024) 3563 7511 </li>
                        <li>Hotline: 0382020858 </li>
                        <li>Mail: aptech@indochinapro.com</li>
                    </ul>
                </div>
                <div class="col-md-4 col-12">
                    <h2 class="title-heading-footer">LIÊN HỆ</h2>
                    <div class="form-tuvan">
                        <form action="" method="post">
                            <input type="text" name="name" id="" placeholder="Họ và tên">
                            <input type="tel" name="phone" id="" placeholder="Số điện thoại">
                            <input type="email" name="email" id="" placeholder="Email">
                            <input type="text" name="address" id="" placeholder="Địa chỉ">
                            <button type="submit">Đăng ký</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <div class="call-now-button ui-draggable ui-draggable-handle" id="draggable">
        <div>
            <p class="call-text"> 0382020858 </p>
            <a href="tel:0382020858" id="quickcallbutton" onclick="ga('send', 'event', 'Contact', 'Quick Call Button', 'Phone');" title="Call Now">
                <div class="quick-alo-ph-circle active"></div>
                <div class="quick-alo-ph-circle-fill active"></div>
                <div class="quick-alo-ph-img-circle shake"></div>
            </a>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script src="/assets/js/jquery.countUp.js"></script>
    <script src="/assets/js/owl.carousel.min.js"></script>
    <script src="https://kit.fontawesome.com/a7f9139fa6.js" crossorigin="anonymous"></script>
    <script src="/assets/js/script.js"></script>
</body>
</html>